<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"

        android:padding="0dp"

        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/users_profile_image"
            android:layout_width="85dp"
            android:layout_height="105dp"
            android:src="@drawable/img_1">

        </de.hdodenhof.circleimageview.CircleImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"

            android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/users_profile_name"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:text="Vivek"
                    android:textAlignment="textStart"
                    android:textSize="24dp"
                    android:textStyle="bold">

                </TextView>

                <ImageView
                    android:id="@+id/online_icon"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:src="@drawable/online"
                    android:visibility="invisible">

                </ImageView>

            </LinearLayout>

            <TextView
                android:id="@+id/users_profile_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Typing......."
                android:textAlignment="textStart"
                android:textSize="20dp">

            </TextView>

            <LinearLayout
                android:id="@+id/users_requests"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/request_accept"
                    android:layout_width="149dp"
                    android:layout_height="40dp"
                    android:background="#AEEA00"
                    android:text="Accept"
                    android:textAllCaps="false"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:visibility="invisible"

                    >

                </Button>

                <Button
                    android:id="@+id/request_reject"
                    android:layout_width="137dp"
                    android:layout_height="40dp"
                    android:background="#EF1A1A"
                    android:text="Reject"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:visibility="invisible">

                </Button>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>